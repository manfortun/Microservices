@model RegisterCredentials

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container border p-4 col-lg-5">
    <form method="post" class="m-3">
        <fieldset>
            <legend>Create an account</legend>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col mb-3 p-1">
                <label asp-for="Role">Please select a type: </label>
                <select asp-for="Role"
                        asp-items="@Html.GetEnumSelectList<Role>()"></select>
            </div>

            <!-- Email field-->
            <div class="form-group col mb-3 p-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password field-->
            <div class="form-group col mb-3 p-1">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm password field-->
            <div class="form-group col mb-3 p-1">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary form-control">Create account</button>

        </fieldset>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}