@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Category";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>

<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (CategoryDto item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Name</td>
                    <td class="text-end">
                        <div class="w-70 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return deleteCategory()">
                                <button class="btn btn-danger">
                                    <i class="bi bi-trash3"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        function deleteCategory() {
            return confirm('Are you sure you want to delete this category?');
        }
    </script>
}